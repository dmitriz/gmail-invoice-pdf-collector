{
  "name": "gmail-invoice-pdf-collector",
  "version": "1.0.0",
  "description": "A tool to collect and merge invoice PDFs from Gmail",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:mock": "node src/index.js --test-mode",
    
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "test:integration": "jest src/__tests__/integration.test.js",
    "test:coverage": "jest --coverage",
    
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write src",
    
    "validate": "npm run lint && npm run test",
    "dev": "npm run format && npm run lint:fix && npm run test && npm run start:mock"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitriz/gmail-invoice-pdf-collector.git"
  },
  "keywords": [
    "gmail",
    "invoice",
    "pdf",
    "collector"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dmitriz/gmail-invoice-pdf-collector/issues"
  },
  "homepage": "https://github.com/dmitriz/gmail-invoice-pdf-collector#readme",
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "googleapis": "^105.0.0",
    "nodemailer": "^6.8.0",
    "pdf-lib": "^1.17.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "jest": "^29.3.1",
    "prettier": "^2.8.2"
  }
}
